<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/titel_na"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Date"
            android:layout_weight=".5"
            android:textColor="@color/fontColor"
            android:text="Date" />

        <TextView
            android:id="@+id/tv_data_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:textColor="@color/fontColor"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">


        <TextView
            android:id="@+id/rest.name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Date"
            android:layout_weight=".5"
            android:textColor="@color/fontColor"
            android:text="Rest. Name" />

        <TextView
            android:id="@+id/tv_rest_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:textColor="@color/fontColor"
            android:text="TextView" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">


        <TextView
            android:id="@+id/booking_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:textColor="@color/fontColor"
            android:text="Booking ID" />

        <TextView
            android:id="@+id/tv_booking_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:textColor="@color/fontColor"
            android:text="Sy560002019798" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="1">

        <TextView
            android:id="@+id/table_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desctiption"
            android:textColor="@color/fontColor"
            android:layout_weight=".5"
            android:text="Table No" />

        <TextView
            android:id="@+id/tv_table_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/table_no"
            android:textColor="@color/fontColor"
            android:layout_weight=".5"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">


        <TextView
            android:id="@+id/order_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desctiption"
            android:textColor="@color/fontColor"
            android:layout_weight=".5"
            android:text="Order Total" />


        <TextView
            android:id="@+id/tv_order_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/table_no"
            android:textColor="@color/fontColor"
            android:layout_weight=".5"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">


        <TextView
            android:id="@+id/order_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quantity"
            android:layout_weight=".5"
            android:textColor="@color/fontColor"
            android:text="Status" />


        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/table_no"
            android:textColor="@color/fontColor"
            android:layout_weight=".5"
            android:text="TextView" />

    </LinearLayout>
</LinearLayout>
