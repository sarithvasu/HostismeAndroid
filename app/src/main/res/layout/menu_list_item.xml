<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_dish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Bread Fresh Baked Sourdough"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="$ 45.00" />

    <TextView
        android:id="@+id/tv_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_dish_name"
        android:text="Virgin Olive Oil | Aged balsamic Vinger"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/btn_lay"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
       android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:background="@drawable/rounded_corner"
        android:layout_below="@+id/tv_price">

        <TextView
            android:id="@+id/tv_minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/secondHeader"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="-" />

        <TextView
            android:id="@+id/tv_qutity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@color/payment_btn_color"
            android:text="10" />
        <TextView
            android:id="@+id/tv_plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/secondHeader"
            android:text="+" />
    </LinearLayout>

    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:background="@drawable/rounded_corner"
        android:gravity="center"
        android:textAlignment="center"
        android:text="Add"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_add_item"
        android:textColor="@color/secondHeader"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_price"
        android:textStyle="bold"

        />


</RelativeLayout>