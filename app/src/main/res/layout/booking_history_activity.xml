<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/titel_na"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ListView
        android:id="@+id/historyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titel_na"
        android:padding="5dp"></ListView>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titel_na"
        android:padding="7dp">

        <TextView
            android:id="@+id/Date"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Date" />

        <TextView
            android:id="@+id/tv_data_time"
android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_rest_name"
            android:layout_alignParentEnd="true"
            android:textSize="9dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tv_rest_name"
            android:text="TextView" />

        <TextView
            android:id="@+id/rest.name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Date"
            android:layout_toLeftOf="@+id/tv_data_time"
            android:layout_toStartOf="@+id/tv_data_time"
            android:text="Rest. Name" />

        <TextView
            android:id="@+id/booking_id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rest.name"
            android:text="Order ID" />

        <TextView
            android:id="@+id/desctiption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/rest.name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/rest.name"
            android:layout_below="@+id/booking_id"
            android:text="Description" />

        <TextView
            android:id="@+id/table_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true"
            android:layout_below="@+id/desctiption"
            android:layout_toLeftOf="@+id/tv_descrption"
            android:layout_toStartOf="@+id/tv_descrption"
            android:text="Table No" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table_no"
            android:text="Quantity" />

        <TextView
            android:id="@+id/order_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/desctiption"
            android:layout_alignRight="@+id/desctiption"
            android:layout_below="@+id/quantity"
            android:text="Amount" />

        <TextView
            android:id="@+id/tv_rest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/booking_id"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/booking_id"
            android:layout_toRightOf="@+id/booking_id"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_booking_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/desctiption"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/booking_id"
            android:layout_toRightOf="@+id/booking_id"
            android:text="Sy560002019798" />

        <TextView
            android:id="@+id/tv_descrption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_booking_id"
            android:layout_toEndOf="@+id/booking_id"
            android:layout_toRightOf="@+id/booking_id"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_table_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/table_no"
            android:layout_alignLeft="@+id/tv_descrption"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/tv_descrption"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_order_total"
            android:layout_toRightOf="@+id/order_status"
            android:text="TextView"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_quantitys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_table_no"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/tv_table_no"
            android:layout_below="@+id/tv_table_no"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_order_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_quantitys"
            android:layout_alignStart="@+id/tv_quantitys"
            android:layout_below="@+id/tv_quantitys"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_stataus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/order_status"
            android:text="Status"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/tv_order_status"
            android:layout_toStartOf="@+id/tv_order_status" />
    </RelativeLayout>

</RelativeLayout>
